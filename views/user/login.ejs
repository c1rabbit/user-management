<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

  <%- partial('../error.ejs') %>

  <div class="panel panel-default">
    <div class="panel-heading"></div>
    <div class="panel-body">
      <form method="post" action="login" style="margin:2em;">
        <div class="form-group">
          <label class="control-label">Login</label>
          <input type="text" name="login" placeholder="Username" class="form-control" />
        </div>
        <div class="form-group">
          <label class="control-label">Password</label>
          <input type="password" name="pw" placeholder="Password" class="form-control"  />
        </div>
        <div class="form-group">
          <button class="btn btn-primary form-control" type="submit">Login</button>
        </div>

        <div class="form-group text-center">
          <a href="/forgotPassword">Forgot / Reset Password</a>
        </div>
      </form>


    </div>
  </div>

</div>
