<%- partial('submenu.ejs') %>
<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
  <h2>Add New User</h2>

    <%- partial('../error.ejs') %>

    <form method="post" action="addUser" id="myForm" >
      <input type="text" name="login" placeholder="Username" class="form-control"
        value="<%= (typeof message != 'undefined') ? req.param('login') : '' %>"  required />
      <input type="password" name="password" placeholder="password" class="form-control"
        id="password"  required />
      <input type="password" name="password2" placeholder="password again" class="form-control"
        id="password2"  required />
      <input type="text" name="f_name" placeholder="First Name" class="form-control"
        value="<%= (typeof message != 'undefined') ? req.param('f_name') : '' %>"  />
      <input type="text" name="l_name" placeholder="Last Name" class="form-control"
        value="<%= (typeof message != 'undefined') ? req.param('l_name') : '' %>"  />
      <input type="email" name="email" placeholder="Email" class="form-control"
        value="<%= (typeof message != 'undefined') ? req.param('email') : '' %>" required />
      <button class="btn btn-default pull-right" type="submit" >Add User</button>
    </form>

</div>

<script>
  document.addEventListener("DOMContentLoaded", function(event) {
    $("#myForm").validate({
      rules: {
        password:{
          required: true,
          minlength: 8,
          maxlength: 20
        },
        password2:{
          equalTo: "#password",
          minlength: 8,
          maxlength: 20
        }
      }
    });
  });
</script>
