<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
  <h2>Add New User</h2>

    <%- partial('../error.ejs') %>

    <form method="post" action="addProperty" class="form-horizontal">
      <div class="form-group">
        <label class="control-label">Address</label>
        <div>
          <input type="text" name="address" placeholder="Address" class="form-control"
          value="<%= (typeof message != 'undefined') ? req.param('address') : '' %>"  required />
        </div>
      </div>
      <div class="form-group">
        <label class="control-label">City</label>
        <div>
          <input type="text" name="city" placeholder="City" class="form-control"
            value="<%= (typeof message != 'undefined') ? req.param('city') : '' %>"  />
        </div>
      </div>
      <div class="form-group">
        <label class="control-label">State</label>
        <div>
          <input type="text" name="state" placeholder="State" class="form-control"
            value="<%= (typeof message != 'undefined') ? req.param('state') : '' %>"  />
        </div>
      </div>
      <div class="form-group">
        <label class="control-label">Zip Code</label>
        <div>
          <input type="number" name="zip" placeholder="Zip Code" class="form-control"
            value="<%= (typeof message != 'undefined') ? req.param('zip') : '' %>" />
        </div>
      </div>
      <div class="form-group">
        <label class="control-label">Active</label>
        <div>
          <div class="radio-inline">
            <label><input type="radio" name="active" value="true" <% if(req.param('active') == true) { %> checked <% } %> required >Yes</label>
          </div>
          <div class="radio-inline">
            <label><input type="radio" name="active" value="false" <% if(req.param('active') == false) { %> checked <% } %> required >No</label>
          </div>
        </div>
      </div>

      <button class="btn btn-default pull-right" type="submit" >Add Property</button>

    </form>

</div>

