<section>

<%- partial('submenu.ejs') %>
<div class="container">
  <h2>
    All Properties
    <small class="pull-right">
        <small>
          <% if( req.param('active') == 'false' ) { %>
          <a href="/listProperties?active=true">Hide Inactive Properties</a>
          <% } else{ %>
          <a href="/listProperties?active=false">Show Inactive Properties</a>
          <% } %>
        </small>
    </small>
  </h2>

  <%- partial('../error.ejs') %>

  <table class="table ">

    <tr>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>List Price</th>
      <th>Bed</th>
      <th>Bath</th>
      <th></th>
      <th colspan="2">Images</th>
    </tr>
    <% properties.forEach( function (property){ %>
    <tr>
      <td><%= property.address %></td>
      <td><%= property.city %></td>
      <td><%= property.state %></td>
      <td><%= property.zip %></td>
      <td><%= numeral(property.listPrice).format('$0,0.00') %></td>
      <td><%= property.bed %></td>
      <td><%= property.bath %></td>
      <td><a href="/editProperty?id=<%= property.id %> "> <span class="glyphicon glyphicon-edit"></span></a> </td>
      <td><%= property.images.length %></td>
      <td><a href="/editPhotos?id=<%= property.id %> "> <span class="glyphicon glyphicon-picture"></span></a> </td>
    </tr>
    <% }) %>


  </table>

</div>

</section>
